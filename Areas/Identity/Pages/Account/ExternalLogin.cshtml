@page
@model ExternalLoginModel
@{
    ViewData["Title"] = Localizer["Register"];
}

<h2>@ViewData["Title"]</h2>
<h4>@(Localizer["Associate your {0} account.", Model.LoginProvider])</h4>
<hr />

<p class="text-info">
    @Localizer["You've successfully authenticated with"]<strong>@Model.LoginProvider</strong>.
    @Localizer["Please enter an email address for this site below and click the Register button to finish logging in."]
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control dir-left" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary@(UICulture.IsRTL ? " font-fa-b" : "")">@Localizer["Register"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

