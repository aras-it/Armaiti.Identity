@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = Localizer["Register confirmation"];
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
    <p>
        @Localizer["This app does not currently have a real email sender registered, see <a href=\"https://aka.ms/aspaccountconf\">these docs</a> for how to configure a real email sender. Normally this would be emailed: <a id=\"confirm-link\" href=\"{0}\">Click here to confirm your account</a>.", Model.EmailConfirmationUrl]
    </p>
    }
    else
    {
<p>
    @Localizer["Please check your email to confirm your account."]
</p>
    }
}
